        my @attrs = split /,\s*/, MyDef::compileutil::get_macro("$class\_attrs:$name", 1)
        $foreach $p in @plist
            $if $p=~/(.+)\s+(\w+)$/
            $call add_param, $2, $1
            $if $name eq $2
                $foreach $a in @attrs
                    $if $a=~/(\w+)=(.+)/
                        $var->{$1}=$2
        next

