fncode: allocate($dim, $param2, $alloc_type)
    $call auto_init
    $call auto_post
    add_include("stdlib, string")
    $call get_dimension
    $if defined $init_value and $init_value eq '0'
        $alloc_type = "calloc"
        undef $init_value
    my @plist=split /,\s*/, $param2
    $foreach $p in @plist
        $if $p
            $call @get_var
            my $type=pointer_type(get_var_type($p))

            my $size="sizeof($type)"
            my $tsize = $size
            $if $type =~ /\bchar$/
                $tsize=$dim
            $elif $dim ne "1"
                $tsize = "$dim*$size"

            $if $alloc_type eq "realloc"
                push @$out, "$p=($type*)realloc($p, $tsize);";
            $elif $alloc_type eq "calloc"
                push @$out, "$p=($type*)calloc($dim, $size);";
            $else
                push @$out, "$p=($type*)malloc($tsize);";

            $call @auto_post_p
            $call allocate_init
        $else
            $call warn, allocate [empty]

    # ----------------------------------
    subcode: auto_init
        my $auto_free
        $if $alloc_type eq "auto"
            $auto_free = 1
    subcode: auto_post
        my $post
        $if $auto_free
            $post=MyDef::compileutil::get_named_block("_post")
    subcode: auto_post_p
        $if $auto_free
            push @$post, "free($p);"

    subcode: get_dimension
        my $init_value;
        $if $dim=~/(.*),\s*(.*)/
            $dim=$1;
            $init_value=$2;
        $if $dim=~/[+-]/
            $dim="($dim)";

    subcode: get_var
        $if $p=~/^(\w+)$/
            my $var=find_var($p)
            $if !$var
                func_add_var($p)
                $var=find_var($p)
            $if !$var->{class}
                $var->{dimension}=$dim
            $if $dim=~/\*/
                my @parts=split /\s*\*\s*/, $dim
                my $i=0
                $foreach $d in @parts
                    $i++
                    $var->{"dim$i"}=$d
                $if $i==2 and !$var->{class}
                    $if $debug
                        $print setting matrix class: $p
                    $var->{"class"}="matrix"
    # ------------------------------------------ 
    subcode: allocate_init
        $if defined $init_value and $init_value ne ""
            $if $init_value eq "0"
                $if $type eq "void"
                    push @$out, "memset($p, 0, $dim);"
                $else
                    push @$out, "memset($p, 0, $dim*sizeof($type));"
            $else
                my $var = temp_add_var("i", $type_name{i})
                my $i = $var->{name}
                $init_value=~s/\bi\b/$i/g
                push @$out, "for($i=0;$i<$dim;$i++){";
                push @$out, "    $p\[$i]=$init_value;";
                push @$out, "}";

